<div class="container mt-5">
  <div class="card shadow-sm p-4">
    <h2 class="text-center mb-4">Edit Post</h2>
    
    <%= form_for @post, html: { class: 'needs-validation' } do |f| %>
      <div class="form-group mb-3">
        <%= f.label :text, "Post Text", class: "form-label" %>
        <%= f.text_area :text, class: "form-control", rows: 3, placeholder: "Write something interesting..." %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :description, "Description", class: "form-label" %>
        <%= f.text_field :description, class: "form-control", placeholder: "Add a short description" %>
      </div>

      <div class="form-group mb-4">
        <%= f.label :images, "Upload Images", class: "form-label" %>
        <%= f.file_field :images, multiple: true, class: "form-control" %>
        <small class="form-text text-muted">You can upload multiple images.</small>
      </div>

      <div class="text-center">
        <%= f.submit "Update Post", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
